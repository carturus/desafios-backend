extends layout
block vista
  div(class='jumbotron')
    h1(class='text-center') Ingrese Productos
    form(
      action="/api/productos/guardar" 
      method="POST"
    ) 
      label(for="title") Producto
      input(
        class="form-control" 
        type="text" 
        name="title" 
      ) 
      label(for="price") Precio
      input(
        class="form-control" 
        type="number" 
        name="price" 
      ) 
      label(for="thumnail") Url Foto
      input(
        class="form-control" 
        type="text" 
        name="thumbnail" 
      ) 
      button(
        type="submit" 
        class="btn btn-primary mt-5"
      ) Enviar 

      




