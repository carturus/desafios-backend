
<div class="jumbotron">
<div class="form-group">
    <h1>Registro</h1>
    <form action="/auth/signup" enctype="multipart/form-data" method="POST">
      <label for="username">Usuario</label>
      <input class="form-control" type="text" name="username" id="username"/>
      <label for="password">Contraseña</label>
      <input  class="form-control" type="password" name="password" id="password"/>
      <label for="correo">Correo</label>
      <input  class="form-control" type="text" name="correo" id="correo"/>
       <label for="nombre">Nombre</label>
      <input class="form-control" type="text" name="nombre" id="nombre"/>
      <label for="direccion">Dirección</label>
      <input class="form-control" type="text" name="direccion" id="direccion"/>
      <label for="edad">Edad</label>
      <input class="form-control" type="number" name="edad" id="edad"/>
      <label for="telefono">Telefono</label>
      <input class="form-control" type="text" name="telefono" id="telefono"/>
      <div class="form-group">
         <label for="foto">Selecciona foto</label>
        <input type="file" name="foto" id="foto" />
      </div>

      <button type="submit" class="btn btn-primary mt-5" >Registrar</button>
    </form>
</div>
</div>